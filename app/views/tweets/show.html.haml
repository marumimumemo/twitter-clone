.topbar
  .topbar__navigation
    .topbar__navigation__left
      .home
        = link_to root_path do
          = fa_icon "home"
          .text ホーム
      .moment
        = link_to "#" do
          = fa_icon "bolt"
          .text モーメント
      .notification
        = link_to "#" do
          = fa_icon "bell"
          .text 通知
      .message
        = link_to "#" do
          = fa_icon "envelope"
          .text メッセージ
    .bird-icon
      = link_to "#" do
        = fa_icon "twitter"
    .topbar__navigation__right
      .search
        %form.search
          %input.keyword(placeholder="キーワード検索" type="text")
          %label
        = fa_icon "search"
      #navi
        = image_tag current_user.avatar_image.url(:thumb_a)
        .menu
          .menu__name
            = current_user.name
          .menu__user-name
            = current_user.username
          .menu__user-link
            = link_to edit_user_path(current_user) do
              = fa_icon "male"
              .m-text-a プロフィール
          .menu__list
            = link_to "#" do
              = fa_icon "list"
              .m-text-a リスト
          .menu__moment
            = link_to "#" do
              = fa_icon "bolt"
              .m-text-a モーメント
          .menu__setting
            = link_to "#" do
              .m-text-b 設定とプライバシー
          .menu__help-center
            = link_to "#" do
              .m-text-b ヘルプセンター
          .menu__logout
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'm-text-b'
      .tweet-buttun ツイート
.detail__timeline__tweet__box
  .context-bar
    = fa_icon "heart"
    .notification 久保裕也さんがいいねしました
  .tweet-header
    .icon
      = image_tag @tweet.user.avatar_image.url(:thumb_d)
    .name-box
      .fullname
        = @tweet.user.name
      .username
        = @tweet.user.username
    .follow-buttun フォロー中
    = fa_icon "caret-down"
    - if current_user.id == @tweet.user_id
      .delete-menu
        .delete-menu__share ダイレクトメッセージで共有
        .delete-menu__copy ツイートへのリンクをコピー
        .delete-menu__site ツイートをサイトに埋め込む
        .delete-menu__pintweet プロフィールを固定表示しない
        .delete-menu__delete
          = link_to 'ツイートを削除', tweet_path(@tweet.id), method: :delete, data: {confirm: "このツイートを本当に削除しますか?"}
        .delete-menu__moment モーメントに追加
    - else
      .other-menu
        .other-menu__copy ツイートへのリンクをコピー
        .other-menu__site ツイートをサイトに埋め込む
        .other-menu__mute さんをミュート
        .other-menu__block さんをブロック
        .other-menu__report ツイートを報告する
        .other-menu__moment モーメントに追加
  .tweet-text
    .body
    = @tweet.body
    .image
    - @tweet.images.each do |a|
      = image_tag a.image.url(:tweet_image)
  .timestamp
    = @tweet.created_at
  .status
    .status-retweets 3件のリツイート
    .status-likes 6件のいいね
  .guide
    .guide-comment 返信
    .guide-retweet リツイート
    .guide-like いいね
    .guide-message メッセージ
    .guide-other その他
  .item-footer
    = fa_icon "comment"
    .count 3
    = fa_icon "retweet"
    .count 3
    = fa_icon "heart"
    .count 3
    = fa_icon "envelope"
  .detail__timeline__tweetbox__one
    .icon
      = image_tag current_user.avatar_image.url(:thumb_a)
    .tweet-editer
      .rich-editor
        = form_for("#") do |f|
          .field
            .field-input
              = f.text_field :body
              = f.submit '', class: 'form__submit'
            .text 返信をツイート
            .guide-image 画像/動画を追加
  .detail__timeline__tweetbox__two
    .icon
      = image_tag current_user.avatar_image.url(:thumb_a)
    .tweet-editer
      .rich-editor
        = form_for("#") do |f|
          .field
            .field-input
              = f.text_area :body, placeholder: "返信をツイート"
              = f.fields_for :images, multiple: true do |i|
                = i.label :image, class: 'image-upload' do
                  = fa_icon "image"
                = i.file_field :image, class: 'hidden'
              = f.submit '返信', class: 'tweet-buttun'
              = fa_icon "image"
              = fa_icon "circle"
              = fa_icon "align-left"
              = fa_icon "map-pin"
              .guide-image 画像/動画を追加
              .guide-vote 投票を追加
              .guide-address 位置情報を追加
