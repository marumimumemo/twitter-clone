.topbar
  .topbar__navigation
    .topbar__navigation__left
      .home
        = link_to root_path do
          = fa_icon "home"
          .text ホーム
      .moment
        = link_to "#" do
          = fa_icon "bolt"
          .text モーメント
      .notification
        = link_to "#" do
          = fa_icon "bell"
          .text 通知
      .message
        = link_to "#" do
          = fa_icon "envelope"
          .text メッセージ
    .bird-icon
      = fa_icon "twitter"
    .topbar__navigation__right
      .search
        %form.search
          %input.keyword(placeholder="キーワード検索" type="text")
          %label
        = fa_icon "search"
      .guide-menu プロフィールと設定
      #navi
        = image_tag current_user.avatar_image.url(:thumb_a)
        .menu
          .menu__name
            = current_user.name
          .menu__user-name
            = current_user.username
          .menu__user-link
            = link_to edit_user_path(current_user) do
              = fa_icon "male"
              .m-text-a プロフィール
          .menu__list
            = link_to "#" do
              = fa_icon "list"
              .m-text-a リスト
          .menu__moment
            = link_to "#" do
              = fa_icon "bolt"
              .m-text-a モーメント
          .menu__setting
            = link_to "#" do
              .m-text-b 設定とプライバシー
          .menu__help-center
            = link_to "#" do
              .m-text-b ヘルプセンター
          .menu__logout
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'm-text-b'
      .tweet-buttun ツイート
